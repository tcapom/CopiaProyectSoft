<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Correo electrónico", class: "label" %>
    <div class="control has-icons-left has-icons-right">
      <%= f.email_field :email, class: "input is-success", autofocus: true, autocomplete: "email", placeholder: "Correo electrónico" %>
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-check"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña", class: "label" %>
    <div class="control has-icons-left has-icons-right"> 
      <%= f.password_field :password, class: "input is-success", autocomplete: "current-password", placeholder: "Contraseña" %>
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-check"></i>
      </span>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuérdame" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar sesión", class: "button" %>
  </div>
<% end %>

<br>
