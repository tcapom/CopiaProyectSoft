<h2 class="title is-2">Regístrate</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "box" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="label"><%= f.label :email, "Correo Electrónico" %></label>
    <div class="control">
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= f.label :password, "Contraseña" %></label>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %>
    <div class="control">
      <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= f.label :password_confirmation, "Confirmar Contraseña" %></label>
    <div class="control">
      <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Registrarse", class: "button is-primary" %>
    </div>
  </div>
<% end %>

