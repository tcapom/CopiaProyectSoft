<%= form_with(url: '/crear_actividad', method: 'post', local: true, multipart: true) do |form| %>
  <div class="box">
    <div class="field">
      <label class="label">Título de la actividad*:</label>
      <div class="control">
        <%= form.text_field 'actividad[titulo]', class: 'input' %>
      </div>
    </div>

    <div class="field">
      <label class="label">Valor*:</label>
      <div class="control">
        <%= form.text_field 'actividad[valor]', class: 'input' %>
      </div>
    </div>

    <div class="field">
      <label class="label">Descripción de la actividad:</label>
      <div class="control">
        <%= form.text_field 'actividad[descripcion]', class: 'input' %>
      </div>
    </div>

    <div class="field">
      <label class="label">Inserta una foto:</label>
      <div class="control">
        <div class="file has-name">
          <label class="file-label">
            <%= form.file_field 'actividad[url_imagen]', class: 'file-input' %>
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">Elige un archivo…</span>
            </span>
          
          </label>
        </div>
      </div>
    </div>


    <div class="field">
      <div class="control">
        <button type="submit" class="button is-primary">Crear Actividad</button>
      </div>
    </div>

    <div class="field">
      <p class="help">Los campos con asterisco (*) son necesarios</p>
    </div>

    <%= form.hidden_field 'actividad[user_email]', value: current_user.email %>
  </div>
<% end %>



