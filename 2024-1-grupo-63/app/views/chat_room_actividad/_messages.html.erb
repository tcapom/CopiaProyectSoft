




<div class="columns">
  <div class="column is-three-quarters">
    <div id="messages">
      <% messages.each do |message| %>
        <div class="box">
          <article class="media">
            <div class="media-content">
              <div class="content">
                <p>
                  <strong><%= message.user.email %></strong>
                  <small><%= time_ago_in_words(message.created_at) %> ago</small>
                  <br />
                  <%= message.content %>
                </p>
              </div>
            </div>
          </article>
        </div>
      <% end %>
    </div>
