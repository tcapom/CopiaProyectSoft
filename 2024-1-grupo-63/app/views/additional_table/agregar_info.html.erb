<%= form_with(url: '/nueva_info', method: :patch, local: true) do |form| %>
  <!-- No necesitas incluir un campo para user_id -->

  <div class="field">
    <label class="label" for="phone">Teléfono:</label>
    <div class="control">
      <%= form.text_field :phone, class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label" for="username">Nombre de usuario:</label>
    <div class="control">
      <%= form.text_field :username, class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label" for="pronouns">Pronombres:</label>
    <div class="control">
      <%= form.text_field :pronouns, class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label" for="biografia">Biografía:</label>
    <div class="control">
      <%= form.text_area :biografia, class: "textarea" %>
    </div>
  </div>
  
  <div class="field">
  <label class="label" for="picture">Nueva foto de perfil:</label>
  <div class="file has-name control">
    <label class="file-label">
      <%= form.file_field :picture, class: "file-input", id: "file-upload" %>
      <span class="file-cta">
        <span class="file-icon">
          <i class="fas fa-upload"></i>
        </span>
        <span class="file-label"> Choose a file… </span>
      </span>
      <span class="file-name" id="file-name"></span>
    </label>
  </div>
</div>


  <%= link_to "Cambiar contraseña", edit_user_registration_path %><br>

  <div class="field">
    <div class="control">
      <%= form.submit "Agregar Registro", class: "button is-primary" %>
    </div>
  </div>
<% end %>

  